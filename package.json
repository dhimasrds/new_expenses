{
  "name": "expense-tracker-monorepo",
  "version": "1.0.0",
  "description": "Full-stack expense tracker dengan Next.js frontend dan Supabase backend",
  "main": "api/index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "PORT=3001 nodemon api/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "node api/index.js",
    "start:client": "cd client && npm start",
    "test": "jest",
    "deploy": "vercel --prod",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "shadcn": "^3.4.2"
  },
  "keywords": [
    "expense-tracker",
    "api",
    "supabase",
    "vercel",
    "serverless"
  ],
  "author": "Dhimas Saputra",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
